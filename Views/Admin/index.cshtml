<!DOCTYPE html>
<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
<div class="container">
    <h2>Admin Panel</h2>

    <!-- Add Auction Section -->
    <div class="add_auction">
        <h3>Add Auction</h3>
        <form action="">
            <!-- Input fields for adding an auction -->
            <input type="hidden" name="action" value="addAuction">
            <input type="text" name="addAuctionName" placeholder="Auction Name" required>
            <input type="number" name="addAuctionBid" placeholder="Starting Bid" required>
            <input type="number" name="addAuctionDuration" placeholder="Duration (in minutes)" required>
            <button type="submit">Add</button>
        </form>
        <!-- Display the action result message -->
        <p></p>
    </div>

    <!-- Remove Auction Section -->
    <div class="remove_auction">
        <h3>Remove Auction</h3>
        <form action="">
            <!-- Input fields for removing an auction -->
            <input type="hidden" name="action" value="removeAuction">
            <input type="text" name="removeAuctionName" placeholder="Auction Name" required>
            <button type="submit">Remove</button>
        </form>
        <!-- Display the action result message -->
        <p></p>
    </div>

    <!-- Add User Section -->
    <div class="add_user">
        <h3>Add User</h3>
        <form action="">
            <!-- Input fields for adding a user -->
            <input type="hidden" name="action" value="addUser">
            <input type="text" name="addUserUsername" placeholder="Username" required>
            <input type="password" name="addUserPassword" placeholder="Password" required>
            <button type="submit">Add</button>
        </form>
        <!-- Display the action result message -->
        <p></p>
    </div>

    <!-- Remove User Section -->
    <div class="remove_user">
        <h3>Remove User</h3>
        <form action="">
            <!-- Input fields for removing a user -->
            <input type="hidden" name="action" value="removeUser">
            <input type="text" name="removeUserUsername" placeholder="Username" required>
            <button type="submit">Remove</button>
        </form>
        <!-- Display the action result message -->
        <p></p>
    </div>

    <!-- Add Admin Section -->
    <div class="add_admin">
        <h3>Add Admin</h3>
        <form action="">
            <!-- Input fields for adding an admin -->
            <input type="hidden" name="action" value="addAdmin">
            <input type="text" name="addAdminUsername" placeholder="Username" required>
            <input type="password" name="addAdminPassword" placeholder="Password" required>
            <button type="submit">Add</button>
        </form>
        <!-- Display the action result message -->
        <p></p>
    </div>

    <!-- Remove Admin Section -->
    <div class="remove_admin">
        <h3>Remove Admin</h3>
        <form action="">
            <!-- Input fields for removing an admin -->
            <input type="hidden" name="action" value="removeAdmin">
            <input type="text" name="removeAdminUsername" placeholder="Username" required>
            <input type="text" name="removeAdminPassword" placeholder="Password" required>
            <button type="submit">Remove</button>
        </form>
        <!-- Display the action result message -->
        <p></p>
    </div>

    <!-- User Table -->
    <div class="user_table">
        <h3>User Table</h3>
        <!-- Center the "Load Users" button -->
        <div style="text-align: center;">
        </div>
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Permission</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <!-- Auction Table -->
    <div class="user_table">
        <h3>User Auctions</h3>
        <!-- Center the "Load Users" button -->
        <div style="text-align: center;">
        </div>
        <table>
            <thead>
                <tr>
                    <th>User</th>
                    <th>Name</th>
                    <th>Bid</th>
                    <th>Time left</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>