<link rel="stylesheet" href="~/css/accountPage.css" asp-append-version="true" />
@model IEnumerable<WebAuctions.ViewModels.AuctionVM>
<div class="order-table">
    <h2>@User.Identity.Name    -   Account Screen</h2>
    <h2>Current Auctions</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Auctioneer</th>
                <th>Opening Price</th>
                <th>Due date</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var auction in Model)
            {
                @if (DateTime.Now < auction.EndDate)
            {
                    <tr>
                        <td>@auction.Item.Name</td>
                        <td>@auction.Auctioneer</td>
                        <td>@auction.OpeningPrice</td>
                        <td>@auction.EndDate</td>
                        <td>@auction.Item.Description</td>
                    </tr>
                } 
            }
        </tbody>
    </table>

    <h2>Auctions Won</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>End Price</th>
                <th>Date</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var auction in Model)
            {
                @if (DateTime.Now < auction.EndDate)
                {
                    <tr>
                        <td>@auction.Item.Name</td>
                        <td></td>
                        <td>@auction.EndDate</td>
                        <td>@auction.Item.Description</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
