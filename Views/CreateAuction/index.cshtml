<link rel="stylesheet" href="~/css/CreateAuction.css" asp-append-version="true" />
<!DOCTYPE html>
<h1>Create Auction</h1>

<form method="post" enctype="multipart/form-data">
    <div>
        <label for="picture">Select Picture:</label>
        <input type="file" name="picture" id="picture" required>
    </div>
    <div>
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" required>
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea name="description" id="description" required></textarea>
    </div>
    <div>
        <label for="startingBid">Starting Bid:</label>
        <input type="number" name="startingBid" id="startingBid" required>
    </div>
    <div>
        <label for="duration">Auction Duration (in hours):</label>
        <input type="number" name="duration" id="duration" required>
    </div>
    <div>
        <button type="submit">Create Auction</button>
    </div>
</form>

